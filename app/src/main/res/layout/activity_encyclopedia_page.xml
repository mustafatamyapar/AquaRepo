<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".mustafa.EncyclopediaPage">

    <Button
        android:id="@+id/snailButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg1"
        android:ellipsize="marquee"
        android:onClick="openSnailPage"
        android:text="Other Creatures"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/plantsButton"
        app:layout_constraintEnd_toEndOf="@+id/fishButton"
        app:layout_constraintStart_toStartOf="@+id/plantsButton"
        app:layout_constraintTop_toBottomOf="@+id/fishButton" />

    <Button
        android:id="@+id/plantsButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg1"
        android:ellipsize="marquee"
        android:onClick="openPlantsPage"
        android:text="Plants"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/diseasesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snailButton" />

    <Button
        android:id="@+id/diseasesButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="207dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/bg1"
        android:ellipsize="marquee"
        android:onClick="openDiseases"
        android:text="Dıseases"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/faqButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantsButton" />

    <Button
        android:id="@+id/fishButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg1"
        android:ellipsize="marquee"
        android:onClick="openFishPage"
        android:text="Fısh"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/snailButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="20dp"
        android:text="Encyclopedia"
        android:textAlignment="center"
        android:textColor="#14969C"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/fishButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /><![CDATA[

    app:layout_constraintTop_toBottomOf="@+id/diseasesButton" />



    ]]>

    <Button
        android:id="@+id/faqButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/bg1"
        android:ellipsize="marquee"
        android:onClick="openFaq"
        android:text="F.A.Q."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diseasesButton" />

    <TextView
        android:id="@+id/txtt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:onClick="goMapPage"
        android:text="Do you have any further question?"
        android:textColor="#01192C"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faqButton" />

</androidx.constraintlayout.widget.ConstraintLayout>