<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78FBFFFF"
    tools:context=".mustafa.EncyclopediaPage">

    <Button
        android:id="@+id/snailButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="153dp"
        android:layout_height="85dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="63dp"
        android:background="#787CD1"
        android:ellipsize="marquee"
        android:onClick="openSnailPage"
        android:text="Other Creatures"
        app:layout_constraintBottom_toTopOf="@+id/diseasesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fishButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plantsButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="168dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="183dp"
        android:background="#43A047"
        android:ellipsize="marquee"
        android:onClick="openPlantsPage"
        android:text="Plants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/diseasesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fishButton" />

    <Button
        android:id="@+id/diseasesButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="118dp"
        android:layout_height="199dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="177dp"
        android:background="#E17F7D"
        android:ellipsize="marquee"
        android:onClick="openDiseases"
        android:text="Dıseases"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plantsButton"
        app:layout_constraintTop_toBottomOf="@+id/snailButton" />

    <Button
        android:id="@+id/fishButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="207dp"
        android:layout_height="144dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="77dp"
        android:background="#B2DDE3"
        android:ellipsize="marquee"
        android:onClick="openFishPage"
        android:text="Fısh"
        app:layout_constraintBottom_toTopOf="@+id/plantsButton"
        app:layout_constraintEnd_toStartOf="@+id/snailButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="52dp"
        android:background="#FFFFFF"
        android:text="Encyclopedia"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/fishButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/faqButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="308dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="16dp"
        android:background="#E3246A"
        android:ellipsize="marquee"
        android:onClick="openFaq"
        android:text="F.A.Q."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>