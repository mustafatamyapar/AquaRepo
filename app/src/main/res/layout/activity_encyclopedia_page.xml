<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mustafa.EncyclopediaPage">

    <Button
        android:id="@+id/snailButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ellipsize="marquee"
        android:onClick="openSnailPage"
        android:text="Other Creatures"
        app:layout_constraintBottom_toTopOf="@+id/plantsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fishButton" />

    <Button
        android:id="@+id/plantsButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:ellipsize="marquee"
        android:onClick="openPlantsPage"
        android:text="Plants"
        app:layout_constraintBottom_toTopOf="@+id/diseasesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snailButton" />

    <Button
        android:id="@+id/diseasesButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:ellipsize="marquee"
        android:onClick="openDiseases"
        android:text="Dıseases"
        app:layout_constraintBottom_toTopOf="@+id/faqButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantsButton" />

    <Button
        android:id="@+id/fishButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:ellipsize="marquee"
        android:onClick="openFishPage"
        android:text="Fısh"
        app:layout_constraintBottom_toTopOf="@+id/snailButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="381dp"
        android:text="Encyclopedia"
        android:textColor="#3F51B5"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/txtt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/faqButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="249dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ellipsize="marquee"
        android:onClick="openFaq"
        android:text="F.A.Q."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diseasesButton" />

    <TextView
        android:id="@+id/txtt"
        android:layout_width="287dp"
        android:layout_height="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="84dp"
        android:onClick="goMapPage"
        android:text="Do you have any further question?"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>