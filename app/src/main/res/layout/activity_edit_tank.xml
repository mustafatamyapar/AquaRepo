<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2F0FD"
    tools:context=".zeynep.EditTankActivity">

    <Button
        android:id="@+id/removeCreature"
        android:layout_width="255dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2EADBD"
        android:onClick="removeCreature"
        android:text="Button"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addCreature" />

    <Button
        android:id="@+id/addCreature"
        android:layout_width="255dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2EADBD"
        android:onClick="addCreature"
        android:text="Button"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeName" />

    <TextView
        android:id="@+id/editTankText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeName"
        android:layout_width="255dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#2EADBD"
        android:onClick="changeTankName"
        android:text="Button"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTankText" />

</androidx.constraintlayout.widget.ConstraintLayout>